{
  "version": 2,
  "name": "signalstack-frontend",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "$BACKEND_URL/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "@backend_url"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "@backend_url"
    }
  }
}
